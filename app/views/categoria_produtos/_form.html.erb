<%= simple_form_for(@categoria_produto, html: { class: "container-fluid page-inner", style: "margin-top: 20px;" }) do |f| %>
  <!-- Cabeçalho do formulário -->
  <div class="page-header p-3 mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <!-- Botão de Voltar e Título -->
      <div class="d-flex align-items-center">
        <%= link_to categoria_produtos_path, class: "btn btn-light d-flex align-items-center me-3" do %>
          <i class="fas fa-arrow-left me-2"></i> <!-- Ícone de Voltar -->
          <%= t("common.back", default: "Voltar") %>
        <% end %>
      </div>
      <%= t(".header", default: "Categoria produto Form") %>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <!-- Campos do formulário -->
      <div class="form-inputs">
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <%= f.label :categoria_id, "Selecione uma Categoria", class: "form-label" %>
            <div class="input-group">
              <%= f.collection_select :categoria_id, Categoria.all, :id, :nome, { prompt: "Selecione a Categoria" }, { class: "form-control", style: "max-width: 100%;" } %>
              <span class="input-group-text">
                <i class="fas fa-chevron-down"></i> <!-- Ícone de seta para baixo -->
              </span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <%= f.label :produto_id, "Produto", class: "form-label" %>
            <div class="input-group">
              <%= f.collection_select :produto_id, Produto.all, :id, :nome, { prompt: "Selecione o Produto" }, { class: "form-control", style: "max-width: 100%;" } %>
              <span class="input-group-text">
                <i class="fas fa-chevron-down"></i> <!-- Ícone de seta para baixo -->
              </span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <%= f.label :estabelecimento_id, "Estabelecimento", class: "form-label" %>
            <div class="input-group">
              <%= f.collection_select :estabelecimento_id, Estabelecimento.all, :id, :nome, { prompt: "Selecione o Estabelecimento" }, { class: "form-control", style: "max-width: 100%;" } %>
              <span class="input-group-text">
                <i class="fas fa-chevron-down"></i> <!-- Ícone de seta para baixo -->
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <!-- Botões do formulário -->
        <%= f.submit t(".save", default: "Salvar"), class: "btn btn-primary" %>
        <%= link_to t("common.back", default: "Voltar"), categoria_produtos_path, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
