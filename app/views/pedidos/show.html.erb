<div class="container" style="max-width: 850px; margin-top: 2rem;">
  <% if @produto.present? %>
    <div class="produto" style="background-color: #fff; border: none; box-shadow: none; padding: 0.5rem; font-family: 'Helvetica', 'Arial', sans-serif; line-height: 1.2; text-transform: lowercase; font-size: 0.8rem;">
      <!-- Exibindo as informações do produto -->
      <p class="produto-nome" style="font-size: 1.5rem; font-weight: bold; color: #333; margin-bottom: 0.5rem;">
        <%= @produto.nome %>
      </p>
      <p class="produto-descricao" style="font-size: 1rem; color: #555; margin: 0 0 1em;">
        <%= simple_format(@produto.descricao) %>
      </p>
      <!-- Exibindo as imagens do produto -->
      <% if @produto.imagem.attached? %>
        <div class="produto-imagens" style="display: flex; flex-wrap: wrap; gap: 1rem;">
          <%= image_tag rails_blob_path(@produto.imagem, only_path: true), style: "width: 500px; height: auto; margin-bottom: 1rem;" %>
        </div>um
      <% else %>
        <p>Sem imagem disponível.</p>
      <% end %>
      <!-- Exibindo os preços do produto -->
      <div class="produto-precos" style="font-size: 1rem; color: #333; margin-bottom: 1rem;">
        <p><strong>Preço Unitário:</strong> <%= number_to_currency(@produto.preco_unitario) %></p>
        <p><strong>Preço Custo:</strong> <%= number_to_currency(@produto.preco_custo) %></p>
      </div>
      <!-- Exibindo a categoria do produto -->
      <p><strong>Categoria:</strong> <%= @produto.categoria.nome %></p>
      <!-- Ações de edição, exclusão e voltar -->
      <div class="actions" style="display: flex; gap: 1rem; margin-top: 1rem;">
        <%= link_to "Editar", edit_produto_path(@produto), class: "btn btn-warning" %>
        <%= link_to "Voltar", produtos_path, class: "btn btn-secondary" %>
        <%= button_to "Deletar", @produto, method: :delete, data: { confirm: "Você tem certeza?" }, class: "btn btn-danger" %>
      </div>
    </div>
  <% else %>
    <p>Produto não encontrado.</p>
  <% end %>
</div>
