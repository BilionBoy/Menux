<div id="<%= dom_id produto %>">
  <p>
    <strong>Nome:</strong>
    <%= produto.nome %>
  </p>

  <p>
    <strong>Descricao:</strong>
    <%= produto.descricao %>
  </p>

  <p>
    <strong>Preco unitario:</strong>
    <%= produto.preco_unitario %>
  </p>

  <p>
    <strong>Preco custo:</strong>
    <%= produto.preco_custo %>
  </p>

  <p>
    <strong>Estabelecimento:</strong>
    <%= produto.estabelecimento_id %>
  </p>

  <p>
    <strong>Imagem:</strong>
    <%= link_to produto.imagem.filename, produto.imagem if produto.imagem.attached? %>
  </p>

</div>
