<!-- app/views/produtos/show.html.erb -->
<div class="container" style ="margin-top: 100px;">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Detalhes do Produto</h4>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <% if @produto.imagem.attached? %>
                <%= image_tag @produto.imagem.variant(resize: "300x300") if @produto.imagem.attached? %>
              <% else %>
                <span>Sem imagem</span>
              <% end %>
            </div>
            <div class="col-md-8">
              <p><strong>Nome:</strong> <%= @produto.nome %></p>
              <p><strong>Descrição:</strong> <%= @produto.descricao %></p>
              <p><strong>Preço Unitário:</strong> <%= number_to_currency(@produto.preco_unitario) %></p>
              <p><strong>Preço Custo:</strong> <%= number_to_currency(@produto.preco_custo) %></p>
              <p><strong>Categoria:</strong> <%= @produto.categoria.nome %></p>
            </div>
          </div>
        </div>
        <div class="card-footer d-flex gap-2">
          <%= link_to "Editar", edit_produto_path(@produto), class: "btn btn-warning" %>
          <%= link_to "Voltar", produtos_path, class: "btn btn-secondary" %>
          <%= button_to "Deletar", @produto, method: :delete, data: { confirm: "Você tem certeza?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
