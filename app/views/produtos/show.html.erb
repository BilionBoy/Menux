<p style="color: green"><%= notice %></p>
<div class="card" style="width: 18rem;">
  <!-- Imagem do produto -->
  <%= if @produto.imagem.attached? %>
    <%= image_tag @produto.imagem, class: "card-img-top", alt: @produto.nome %>
  <% else %>
    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Imagem não disponível">
  <% end %>
  <!-- Corpo do card -->
  <div class="card-body">
    <h5 class="card-title"><%= @produto.nome %></h5>
    <p class="card-text"><%= @produto.descricao %></p>
    <!-- Links de edição e de volta -->
    <div class="d-flex justify-content-between">
      <%= link_to "Edit this produto", edit_produto_path(@produto), class: "btn btn-warning btn-sm" %>
      <%= link_to "Back to produtos", produtos_path, class: "btn btn-secondary btn-sm" %>
    </div>
    <!-- Botão para destruir o produto -->
    <%= button_to "Destroy this produto", @produto, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger btn-sm mt-3" %>
  </div>
</div>
