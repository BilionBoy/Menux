<div class="table-responsive">
  <table id="<%= singular_table_name %>Table" class="table table-striped table-hover display" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th class="text-center"><%= t("#{controller_name}.index.actions", default: "Ações") %></th>
        <% @<%= plural_table_name %>.first.attributes.keys.each do |column| %>
        <th><%= t("activerecord.attributes.<%= singular_table_name %>.#{column}", default: column.humanize) %></th>
      <% end %>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th class="text-center"><%= t("#{controller_name}.index.actions", default: "Ações") %></th>
      <% @<%= plural_table_name %>.first.attributes.keys.each do |column| %>
      <th><%= t("activerecord.attributes.<%= singular_table_name %>.#{column}", default: column.humanize) %></th>
    <% end %>
  </tr>
</tfoot>
<tbody>
  <% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  <tr>
    <td class="text-center">
      <!-- Dropdown de Ações -->
      <div class="dropdown">
        <button class="btn btn-sm dropdown-toggle" type="button" id="acoesDropdown<%= <%= singular_table_name %>.id %>" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fa fa-cog"></i>
        </button>
        <ul class="dropdown-menu" aria-labelledby="acoesDropdown<%= <%= singular_table_name %>.id %>">
          <li><%= link_to t("#{controller_name}.index.show", default: "Ver"), <%= singular_table_name %>, class: "dropdown-item" %></li>
          <li><%= link_to t("#{controller_name}.index.edit", default: "Editar"), edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "dropdown-item" %></li>
          <li><%= link_to t("#{controller_name}.index.delete", default: "Excluir"), <%= singular_table_name %>, method: :delete, data: { confirm: t("#{controller_name}.index.confirm_delete", default: "Tem certeza?") }, class: "dropdown-item text-danger" %></li>
        </ul>
      </div>
    </td>
    <% @<%= plural_table_name %>.first.attributes.keys.each do |column| %>
    <td><%= <%= singular_table_name %>.<%= column %> %></td>
  <% end %>
</tr>
<% end %>
</tbody>
</table>
</div>
