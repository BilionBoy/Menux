<div class="d-flex justify-content-between align-items-center mb-4">
  <div class="d-flex align-items-center">
    <%= link_to root_path, class: "btn btn-light btn-sm me-3" do %>
      <i class="fa fa-arrow-left"></i> <!-- Ícone de Voltar -->
    <% end %>
    <h1 class="mb-0"><%= t("#{controller_name}.index.title", default: "#{controller_name.humanize}") %></h1>
  </div>
  <!-- Botão para Criar Novo Registro -->
  <%= link_to nadas_path, class: "btn btn-incluir d-flex align-items-center" do %>
    <i class="fa fa-plus me-2"></i> <%= t("#{controller_name}.index.new", default: "Incluir") %>
  <% end %>
</div>
