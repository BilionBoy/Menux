<%= simple_form_for(@estabelecimento, html: { class: "container-fluid page-inner", style: "margin-top: 60px;" }) do |f| %>
  <!-- Cabeçalho do formulário -->
  <div class="page-header p-3 mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <!-- Botão de Voltar e Título -->
      <div class="d-flex align-items-center">
        <%= link_to estabelecimentos_path, class: "btn btn-light d-flex align-items-center me-3" do %>
          <i class="fas fa-arrow-left me-2"></i> <!-- Ícone de Voltar -->
          <%= t("common.back", default: "Voltar") %>
        <% end %>
      </div>
      <%= t(".header", default: "Estabelecimento Form") %>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <!-- Campos do formulário com 2 campos por linha -->
      <div class="form-inputs">
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <%= f.input :nome, input_html: { class: "form-control", style: "max-width: 100%;", placeholder: "Nome", title: "Informe o nome do estabelecimento" } %>
          </div>
          <div class="col-12 col-md-6 mb-3">
            <%= f.input :cnpj, input_html: { class: "form-control", style: "max-width: 100%;", placeholder: "CNPJ", title: "Informe o CNPJ do estabelecimento" } %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <%= f.input :endereco, input_html: { class: "form-control", style: "max-width: 100%;", placeholder: "Endereço", title: "Informe o endereço do estabelecimento" } %>
          </div>
          <div class="col-12 col-md-6 mb-3">
            <%= f.input :telefone, input_html: { class: "form-control", style: "max-width: 100%;", placeholder: "Telefone", title: "Informe o número de telefone do estabelecimento" } %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <!-- Botões do formulário -->
      <%= f.submit t(".save", default: "Salvar"), class: "btn btn-primary" %>
      <%= link_to t("common.back", default: "Voltar"), estabelecimentos_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
