<%= simple_form_for(@users_estabelecimento, html: { class: "container-fluid page-inner", style: "margin-top: 20px;" }) do |f| %>
  <!-- Cabeçalho do formulário -->
  <div class="page-header p-3 mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <!-- Botão de Voltar e Título -->
      <div class="d-flex align-items-center">
        <%= link_to users_estabelecimentos_path, class: "btn btn-light d-flex align-items-center me-3" do %>
          <i class="fas fa-arrow-left me-2"></i> <!-- Ícone de Voltar -->
          <%= t("common.back", default: "Voltar") %>
        <% end %>
      </div>
      <%= t(".header", default: "Users estabelecimento Form") %>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <!-- Campos do formulário -->
      <div class="form-inputs">
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <%= f.label :user, "Usuário" %>
            <%= f.collection_select :user_id, User.all, :id, :nome, { prompt: "Selecione o usuário" }, { class: "form-control", style: "max-width: 100%;" } %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <%= f.label :estabelecimento, "Estabelecimento" %>
            <%= f.collection_select :estabelecimento_id, Estabelecimento.all, :id, :nome, { prompt: "Selecione o estabelecimento" }, { class: "form-control", style: "max-width: 100%;" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <!-- Botões do formulário -->
    <%= f.submit t(".save", default: "Salvar"), class: "btn btn-primary" %>
    <%= link_to t("common.back", default: "Voltar"), users_estabelecimentos_path, class: "btn btn-secondary" %>
  </div>
</div>
<% end %>
